}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir" install

  mv "$pkgdir/usr/share/man/man1/"{uuidgen.1,uuidcdef.1}
  rm -f "$pkgdir/usr/bin/uuidgen"
}
