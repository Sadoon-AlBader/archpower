build() {
  cd "$pkgname-$pkgver"
  ./configure --prefix=/usr \
              --disable-static \
              --enable-examples
  make
}

package() {
  cd "$pkgname-$pkgver"
  make DESTDIR="$pkgdir" install
  install -vDm 644 {ChangeLog,README} -t "${pkgdir}/usr/share/doc/${pkgname}"
}

