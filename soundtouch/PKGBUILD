license=(LGPL)
depends=(gcc-libs)
makedepends=(git)
_tag=762f56024b7ade81f6565903161dffec0ad4741e
source=(git+https://gitlab.com/soundtouch/soundtouch.git#tag=${_tag})
sha256sums=(SKIP)

pkgver() {
  cd soundtouch

  git describe --tags
}

prepare() {
  cd soundtouch

  ./bootstrap
}

build() {
  cd soundtouch

  ./configure \
    --prefix=/usr \
    --enable-shared
  make
}

package() {
  make DESTDIR="${pkgdir}" pkgdocdir=/usr/share/doc/soundtouch -C soundtouch install
}

