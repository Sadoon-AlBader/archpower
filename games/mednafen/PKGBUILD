pkgname=mednafen
pkgver=1.26.0
pkgrel=1
pkgdesc="Command-line multi-system gaming emulator"
url="https://mednafen.github.io"
license=('GPL2')
arch=(x86_64 powerpc64le)
depends=('libsndfile' 'sdl2' 'zlib' 'alsa-lib')
makedepends=('mesa' 'glu')
source=(https://mednafen.github.io/releases/files/mednafen-${pkgver}-UNSTABLE.tar.xz)
md5sums=('da74efe4a680baea1c199c59e74df3d6')

build() {
  cd $pkgname

  ./configure --prefix=/usr

  make
}

package() {
  cd $pkgname

  make DESTDIR="$pkgdir" install

  for i in ABOUT-NLS AUTHORS ChangeLog COPYING INSTALL NEWS \
           README{,.DOS,.PORTING} TODO; do
    install -Dm644 $i "$pkgdir"/usr/share/doc/$pkgname/$i
  done
}
