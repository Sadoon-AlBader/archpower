# Maintainer: Alexander Baldeck <alex.bldck@gmail.com>
pkgname=mednafen
pkgver=1.23.0
pkgrel=2
pkgdesc="A portable, utilizing OpenGL and SDL, argument(command-line)-driven multi-system emulator."
arch=(powerpc64le)
url="https://mednafen.github.io/"
license=('GPL')
depends=('libsndfile' 'sdl2')
makedepends=('mesa' 'glu')
source=("https://mednafen.github.io/releases/files/mednafen-${pkgver}-UNSTABLE.tar.xz")
sha512sums=('6a7e3a259e6859bad82ee7e89b8fc066a9f11b428075f2447ecf133e9bc889455ad5d869dea301cc7ed899af1abb228c4bae72acd50cef7ddda26e05f3d5ec26')

build() {
  cd $pkgname
  ./configure --prefix=/usr
  make
}

package() {
  cd $pkgname

  make DESTDIR="$pkgdir" install

  for i in ABOUT-NLS AUTHORS ChangeLog COPYING INSTALL NEWS \
           README{,.DOS,.PORTING} TODO; do
    install -Dm644 $i "$pkgdir"/usr/share/doc/$pkgname/$i
  done
}

