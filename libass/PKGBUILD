build() {
  cd libass

  ./configure \
    --prefix=/usr \
    --enable-harfbuzz \
    --enable-fontconfig
  make
}

package() {
  make DESTDIR="${pkgdir}" -C libass install
  install -Dm 644 libass/COPYING -t "${pkgdir}"/usr/share/licenses/libass/
}

