arch=(x86_64 powerpc64le)
url=https://github.com/libass/libass/
license=(BSD)
depends=(
  fontconfig
  fribidi
  glib2
  glibc
  harfbuzz
  libfreetype.so
)
makedepends=(
  git
)
provides=(libass.so)
_tag=415240ce8efe01ffc952725df7d5a980b001cca8
source=(git+https://github.com/libass/libass.git?signed#tag=${_tag})
