# POWER Maintainer: Alexander Baldeck <alex.bldck@gmail.com>
# Maintainer: Dexter Clyve <dexter.clyve@gmail.com>

pkgname=('rust')
epoch=1
pkgver=1.35.99
export _rustver=nightly
pkgrel=1

pkgdesc='Systems programming language focused on safety, speed and concurrency'
url='https://www.rust-lang.org/'
arch=('powerpc64le')
license=('MIT' 'Apache')

makedepends=('rustup' 'libffi' 'perl' 'python2' 'curl' 'cmake')

options=('!emptydirs' '!strip')

export CARGO_HOME=${srcdir}/rustup
export RUSTUP_HOME=${srcdir}/rustup

build() {
  export CARGO_HOME=${srcdir}/rustup
  export RUSTUP_HOME=${srcdir}/rustup

  # quick workaround for repeated builds since we're moving files
  rm -rf ${RUSTUP_HOME}

  mkdir -p ${RUSTUP_HOME}
  rustup install ${_rustver}-powerpc64le-unknown-linux-gnu
}

package_rust() {
  depends=('gcc-libs' 'llvm-libs' 'curl' 'libssh2')
  provides=('cargo' 'rustfmt')
  conflicts=('cargo' 'rustfmt')
  replaces=('cargo' 'rustfmt')

  export CARGO_HOME=${srcdir}/rustup
  export RUSTUP_HOME=${srcdir}/rustup

  cd ${RUSTUP_HOME}/toolchains/${_rustver}-powerpc64le-unknown-linux-gnu
  mkdir -p ${pkgdir}/usr
  mv * ${pkgdir}/usr/
}

# vim:set ts=2 sw=2 et:
