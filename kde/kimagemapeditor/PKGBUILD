pkgname=kimagemapeditor
pkgver=19.04.3
pkgrel=1
arch=(x86_64 powerpc64le)
pkgdesc="HTML Image Map Editor"
url='https://www.kde.org'
license=(GPL LGPL FDL)
groups=(kde-applications kdewebdev)
depends=(khtml hicolor-icon-theme)
makedepends=(extra-cmake-modules kdoctools)
conflicts=(kdewebdev-kimagemapeditor)
replaces=(kdewebdev-kimagemapeditor)
source=("https://download.kde.org/stable/applications/$pkgver/src/$pkgname-$pkgver.tar.xz"{,.sig})
sha256sums=('a7e5ba3d85c09c446e37baeac1c149395381b542fbbb1ab642645f631b5ab2de'
            'SKIP')
validpgpkeys=(CA262C6C83DE4D2FB28A332A3A6A4DB839EAA6D7  # Albert Astals Cid <aacid@kde.org>
              F23275E4BF10AFC1DF6914A6DBD2CE893E2D1C87) # Christoph Feck <cfeck@kde.org>

prepare() {
  mkdir -p build
}

build() {
  cd build
  cmake ../$pkgname-$pkgver \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DBUILD_TESTING=OFF
  make
}

package() {
  cd build
  make DESTDIR="$pkgdir" install
}
