pkgname=kmouth
pkgver=19.04.0
pkgrel=1
arch=(x86_64 powerpc64le)
pkgdesc='Speech Synthesizer Frontend'
url='https://kde.org/applications/utilities/kmouth/'
license=(GPL FDL)
groups=(kde-applications kdeaccessibility)
depends=(kio hicolor-icon-theme)
makedepends=(extra-cmake-modules kdoctools)
conflicts=(kdeaccessibility-kmouth)
replaces=(kdeaccessibility-kmouth)
source=("https://download.kde.org/stable/applications/$pkgver/src/$pkgname-$pkgver.tar.xz"{,.sig})
sha256sums=('32666760ed76dd2dc816df52c990cb3b8487346ac37bf065e4b109fb6661ebc3'
            'SKIP')
validpgpkeys=(CA262C6C83DE4D2FB28A332A3A6A4DB839EAA6D7  # Albert Astals Cid <aacid@kde.org>
              F23275E4BF10AFC1DF6914A6DBD2CE893E2D1C87) # Christoph Feck <cfeck@kde.org>

prepare() {
  mkdir -p build
}

build() {
  cd build
  cmake ../$pkgname-$pkgver \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DBUILD_TESTING=OFF
  make
}

package() {
  cd build
  make DESTDIR="$pkgdir" install
}
