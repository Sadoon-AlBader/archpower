build() {
  cd node-$pkgver

  case "${CARCH}" in
    powerpc) CPU=ppc ;;
    powerpc64le) CPU=ppc64 ;;
    x86_64) CPU=x64 ;;
  esac

  ./configure \
    --dest-cpu=${CPU} \
    --prefix=/usr \
    --with-intl=system-icu \
    --shared-openssl \
    --shared-zlib \
    --shared-libuv \
    --experimental-http-parser \
    --shared-nghttp2
    # --shared-cares
    # --shared-v8
    # --shared-http-parser

  make
}

check() {
  cd node-$pkgver
  make test || :
}

package() {
  cd node-$pkgver

  make DESTDIR="$pkgdir" install

  install -D -m644 LICENSE \
    "$pkgdir"/usr/share/licenses/nodejs/LICENSE
}

