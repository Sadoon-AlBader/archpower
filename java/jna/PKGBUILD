# POWER Maintainer: Alexander Baldeck <alex.bldck@gmail.com>

pkgname=jna
pkgver=4.5.1
pkgrel=2
pkgdesc="Java Native Access - native bits"
arch=(x86_64 powerpc64le)
url="https://www.elastic.co/products/elasticsearch"
license=('Apache')
depends=('glibc')
makedepends=('jdk8-openjdk' 'ant')
provides=('jna.jar')
options=(!makeflags)
docker_priv=1
source=("git+https://github.com/java-native-access/jna.git?#tag=${pkgver}"
        jna-ant.patch
)
sha256sums=('SKIP'
	    '1fe9d38e0a9f32c48522a7d0fba9552ebea293daf27298b8d418aaf8fc004646')

prepare() {
  cd ${srcdir}/${pkgname}
  patch -Np1 -i ${srcdir}/jna-ant.patch
  sed 's@-Werror@@g' -i native/Makefile
}

build() {
  cd ${srcdir}/${pkgname}
  unset CFLAGS LDFLAGS
  ant native jar 
}

package() {
  cd ${srcdir}/${pkgname}
  mkdir -p ${pkgdir}/usr/share/java
  install -m644 dist/${pkgname}.jar ${pkgdir}/usr/share/java/${pkgver}-${pkgver}.jar
}
